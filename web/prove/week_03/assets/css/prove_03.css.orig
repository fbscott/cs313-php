/*********************************** buttons **********************************/
button.product,
a.button {
   border-radius: 5px;
   position: relative;
   background-color: #666666;
   border: none;
   color: #ffffff;
   padding: 15px;
   font-size: 1rem;
   width: 100%;
   transition-duration: 300ms;
}

a.button {
   text-decoration: none;
   margin: 0 auto 30px 0;
   text-align: center;
}

button.product span.accent {
   color: #666666;
   right: 0;
   visibility: hidden;
   opacity: 0%;
   transition: opacity 300ms;
   transition-delay: 500ms;
   height: 100%;
}

button.product span.accent span {
   font-style: italic;
   font-weight: bold;
   transform: translate(-50%, -50%);
   top: 50%;
   left: 50%;
   position: absolute;
}

button.product:hover {
   background-color: #333333;
   box-shadow: 0 5px 5px 0 rgba(0,0,0,0.25), 0 10px 10px -5px rgba(0,0,0,0.25);
}

button.product:hover span.accent {
   visibility: visible;
   opacity: 100%;
   position: absolute;
   background-color: #fcb017;
   width: 20%;
   border-radius: 0px 5px 5px 0px;
   top: 0px;
}
/*********************************** end buttons ******************************/
